<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/profile_image_design"
            android:id="@+id/profile"
            android:layout_alignParentLeft="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/smartvender" />

        <RelativeLayout
            android:padding="5dp"
            android:layout_toRightOf="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smart_vender"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/set_profile"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_profile"
                android:textColor="@color/background_color"
                android:textSize="16sp" />

            <View
                android:layout_alignLeft="@+id/set_profile"
                android:layout_alignRight="@+id/set_profile"
                android:layout_below="@+id/set_profile"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/background_color" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/left_steps"
            android:textColor="#000"
            android:textSize="21dp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#ffbb00" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="0dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#ffbb00" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#ffbb00"/>

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#ffbb00" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@color/background_color" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@color/background_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:lines="2"
        android:textSize="14sp"
        android:text="@string/profile_description_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />



    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hey"
            android:layout_gravity="center"
            android:src="@drawable/billing_ico"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/hey"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_orders_1" />

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_orders_2" />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/background_color" />



    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />


 <RelativeLayout
     android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/helo"
         android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:src="@drawable/setting"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/helo"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/setting"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
             <TextView
                android:text="@string/privacy_logout"
                 android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/background_color" />


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />


 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/third_item"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:src="@drawable/smart"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/third_item"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/help_and_support"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
             <TextView
                 android:textSize="20sp"
                android:text="@string/help_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/background_color" />




</LinearLayout>